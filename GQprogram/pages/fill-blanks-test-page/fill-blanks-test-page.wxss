/* pages/fill-blanks-test-page/fill-blanks-test-page.wxss */

page {
  background: #f1f4f8;
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  padding: 0;
  position: relative;
}

.con-top {
  height: 80%;
  width: 100%;
}

.question {
  margin: 30rpx;
  padding: 0;
}

.question text {
  width: 100%;
  color: #393939;
  font-size: 32rpx;
}

.next-btn {
  width: 100%;
  /* position: absolute; */
  position: fixed;
  bottom: 20rpx;
}

.btn {
  margin: 0 40rpx 0 40rpx;
  border-radius: 50rpx;
  background: #5297ff;
  border: none;
  color: #fff;
}

.content {
  width: 100%;
  height: 152rpx;
  margin-bottom: 40rpx;
}

.content textarea {
  margin: 0 50rpx;
  height: 100%;
  background: #fff;
  border: 4rpx solid #5297ff;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
}

.calculator {
  width: 100%;
  height: 100%;
  background: #d8d8d8;
}

.calculator-row {
  width: 100%;
  height: 100rpx;
  padding: 10rpx 0;
  display: flex;
  justify-content: space-around;
}

.calculator-key {
  width: 16%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
}

.key-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
}

.result {
  background: #fff;
  width: 100%;
  border: 2rpx solid #333;
}

.ceshi {
  display: block;
  width: 80%;
  height: 100%;
  border: 1rpx solid #5297ff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin: 0 auto;
  background: #fff;
}

.correct-ico {
  width: 288rpx;
  height: 288rpx;
  position: absolute;
  z-index: 1000;
  top: 30%;
  left: 30%;
}

.error-view {
  height: 18%;
  width: 50rpx;
  border-radius: 10rpx;
  position: absolute;
  bottom: 15%;
  right: 0;
  /* background: rgba(0, 0, 0, 0.3); */
}

.error-content {
  position: absolute;
  bottom: 0;
  height: 100%;
  width: 100%;
  right: 0;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.1);
  text-align: center;
}

.error-content text {
  font-size: 32rpx;
}
