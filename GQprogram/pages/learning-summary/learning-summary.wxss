/* pages/learning-summary/learning-summary.wxss */

.content {
  position: relative;
  height: 100%;
  overflow: hidden;
}

page {
  width: 100%;
  height: 100%;
  background: #f1f4f8;
}

.card {
  border-radius: 20rpx;
  padding: 40rpx 40rpx 20rpx 40rpx;
  margin: 40% 30rpx 0;
  background: #fff;
}

.card-title {
  font-size: 36rpx;
  color: #393939;
}

.card-content {
  width: 100%;
  margin-top: 30rpx;
}

.content-item {
  display: flex;
  width: 100%;
  margin-bottom: 30rpx;
}

.content-item:last-child {
  margin-bottom: 0;
}

.content-item image {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx dashed #393939;
  margin-right: 30rpx;
}

.content-item text {
  font-size: 28rpx;
  color: #393939;
  width: 400rpx;
}

.to-rest {
  color: #fff;
  font-size: 26rpx;
  margin: 40rpx;
}

.imgbg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.imgbg image {
  width: 100%;
  height: 100%;
}

.con-btn {
  height: 47rpx;
  border-radius: 40rpx;
  line-height: 47rpx;
  background: #fff;
  font-size: 20rpx;
  width:23%;
  color:#9596a6;
}
