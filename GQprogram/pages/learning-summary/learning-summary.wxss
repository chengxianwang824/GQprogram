/* pages/learning-summary/learning-summary.wxss */

page {
  width: 100%;
  height: 100%;
  background: #f1f4f8;
}

.card {
  border-radius: 20rpx;
  padding: 40rpx 40rpx 20rpx 40rpx;
  margin: 20rpx 30rpx;
  background: #fff;
}

.card-title {
  font-size: 36rpx;
  color: #393939;
}

.card-content {
  width: 100%;
  margin-top: 30rpx;
}

.content-item {
  display: flex;
  width: 100%;
  margin-bottom: 30rpx;
}

.content-item:last-child {
  margin-bottom: 0;
}

.content-item image {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx dashed #393939;
  margin-right: 30rpx;
}

.content-item text {
  font-size: 28rpx;
  color: #393939;
  width: 400rpx;
}

.to-rest {
  color: #fff;
  font-size: 26rpx;
  margin: 40rpx;
}
