}

.container {
  height: 100%;
  width: 100%;
  padding: 0;
  position: relative;
}

.bg {
  width: 100%;
  height: 100%;
}

.bg .bg-image {
  height: 100%;
  width: 100%;
}

.liner-image {
  width: 512rpx;
  height: 880rpx;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 120rpx;
}
.big-ball{
  position: absolute;
  top:-40rpx;
  left:600rpx;
  height:242rpx;
  width:242rpx;
}
.middle-ball{
  position: absolute;
  top:360rpx;
  left:-160rpx;
  height:228rpx;
  width:320rpx;
}
.small-ball{
  position: absolute;
  bottom:152rpx;
  right:-180rpx;
  height:114rpx;
  width:386rpx;
}
.intro {
  height: 300rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
}

.intro-text {
  color: #fff;
  text-align: left;
  width: 60%;
  margin: 0 auto;
  height: 170rpx;
}

.intro-text text {
  height: 46rpx;
  line-height:46rpx;
  font-size: 32rpx;
}

button {
  border-radius: 50rpx;
  background: linear-gradient(#5297ff, #3154f4);
  color: #fff;
  width:60%;
  font-size: 36rpx;
  margin-top:18rpx;
  margin-bottom:36rpx;
}
