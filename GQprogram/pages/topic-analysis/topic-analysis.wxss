/* pages/topic-analysis/topic-analysis.wxss */

page {
  width: 100%;
  height: 100%;
}

.content {
  /* width: 100%; */
  height: 100%;
  margin: 40rpx 30rpx;
  position: relative;
}

.title {
  width: 100%;
  font-size: 32rpx;
  color: #393939;
  margin-bottom: 80rpx;
}

.analysis, .test-position {
  width: 100%;
  font-size: 32rpx;
}

.analysis text:first-child, .test-position text:first-child {
  color: #5297ff;
  margin-bottom: 14rpx;
  display: block;
}

.analysis text:last-child, .test-position text:last-child {
  color: #6c6f71;
  display: block;
  margin-bottom: 60rpx;
}

.select-btn {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.select-btn button {
  width: 300rpx;
  height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  border-radius: 44rpx;
}

.select-btn button:first-child {
  background: #ffb854;
}

.select-btn button:last-child {
  background: #5297ff;
}
