<!--pages/comment-detail/comment-detail.wxml-->
<view class="container">
  <view class="content">
    <view class="comment-detail" wx:for-items="{{contents}}" wx:key="{{index}}" wx:for-item="item">
      <view class="avatar">
        <image src="{{item.igUrl}}"></image>
      </view>
      <view class="detail">
        <view class="comment-top">
          <view class="name">{{item.userName}}</view>
          <view class="dz" bindtap="likeIt">
            <image src="https://bianshixue.oss-cn-zhangjiakou.aliyuncs.com/image/ico_dz_bor.png" hidden="{{!isLikeIt}}"></image>
            <image src="/https://bianshixue.oss-cn-zhangjiakou.aliyuncs.com/image/ico_dz_pre.png" hidden="{{isLikeIt}}"></image>
            <text>{{count}}</text>
          </view>
        </view>
        <view class="comment">
          <text class="inner"></text>
          <text>{{item.content}}</text>
        </view>
      </view>
    </view>


  </view>
  <view class="input-comment">
    <view class="ipt">
      <image src="https://bianshixue.oss-cn-zhangjiakou.aliyuncs.com/image/ico_pl.png" class="pl-image"></image>
      <input placeholder="写评论..."></input>
    </view>
    <view>
      <image src="https://bianshixue.oss-cn-zhangjiakou.aliyuncs.com/image/ico_dz_bor.png" class="dz-image"></image>
    </view>
    <view class="msg-image">
      <image src="/https://bianshixue.oss-cn-zhangjiakou.aliyuncs.com/image/ico_msg.png"></image>
    </view>
  </view>
</view>