/* pages/question-page/question-page.wxss */

page {
  background: #f1f4f8;
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  padding: 0;
  position: relative;
}

.options {
  padding: 30rpx;
}

.question {
  margin: 30rpx;
  padding: 0;
}

.question text {
  width: 100%;
  color: #393939;
  font-size: 32rpx;
}

.option-item {
  display: flex;
  min-height: 100rpx;
  border-radius: 20px;
  text-align: center;
  width: 620rpx;
  margin: 40rpx 0;
}

.option {
  color: #fff;
  background: #e4e8eb;
  width: 120rpx;
  min-height: 100%;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid #fff;
  /* display:inline-block;
  line-height:100rpx; */
 position: relative;
}

.option-content {
  background: #fff;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border: 2rpx solid #fff;
}
.option-text{
  position: absolute;
  top:30%;
  left: 40%;
}

.option-checked {
  background: #5297ff;
  border: 2rpx solid #5297ff;
  display: inline-block;
}

.option-content-checked {
  border: 2rpx solid #5297ff;
}

.option-wrong {
  background: #ff6277;
  border: 2rpx solid #ff6277;
}

.option-content-wrong {
  border: 2rpx solid #ff6277;
}

.next-btn {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
}

.btn {
  margin: 0 40rpx 20rpx 40rpx;
  border-radius: 50rpx;
  background: #5297ff;
  border: none;
  color: #fff;
}

.pic-option {
  /* display: flex; */
  width: 100%;
}

.pic-item {
  width: 320rpx;
  height: 320rpx;
  display: inline-block;
  background: #fff;
  margin: 20rpx;
  position: relative;
}

.pic-item image {
  width: 254rpx;
  height: 220rpx;
  margin: 20rpx;
}

.pic-item button {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 0;
  background: #e4e8eb;
  color: #fff;
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 0;
  border-top-right-radius: 0;
  position: absolute;
  bottom: 0;
  right: 0;
  border: none;
}

.correct-ico {
  width: 288rpx;
  height: 288rpx;
  position: absolute;
  z-index: 1000;
  top: 30%;
  left: 30%;
}

.error-view {
  height: 100%;
  width: 100%;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.error-content {
  position: absolute;
  bottom: 0;
  height: 35%;
  width: 100%;
  background: #fff;
}
.analysis{
margin-bottom:20rpx;
}
.analysis>text {
  display: block;
}

.analysis>text:first-child {
  text-align: center;
  font-size: 30rpx;
  padding: 10rpx 40rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
  width: 200rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.analysis>text:nth-child(2), .analysis>text:nth-child(3) {
  color: #393939;
  margin: 10rpx 50rpx;
  font-size: 32rpx;
}

.my-answer {
  color: #ff4d4f;
}

.analysis .look {
  position: relative;
  margin: 10rpx 50rpx;
}

.analysis .look button {
  background: #5297ff;
  color: #fff;
  border-radius: 10rpx;
  width: 200rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  position: relative;
  margin: 0;
  left: 0;
}
