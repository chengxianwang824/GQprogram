/* pages/question-page/question-page.wxss */

page {
    background: #f1f4f8;
    width:100%;
    height:100%;
  }
  .container{
    width:100%;
    height:100%;
    padding:0;
  }
  
  .question {
    margin: 30rpx;
    padding: 0;
  }
  
  .question text {
    width:100%;
    color: #393939;
    font-size: 32rpx;
  }
  
  .option-item {
    display: flex;
    height: 100rpx;
    border-radius: 20px;
    text-align: center;
    width: 620rpx;
    margin: 40rpx 0;
  }
  
  .option {
    color: #fff;
    background: #e4e8eb;
    width: 120rpx;
    line-height: 100rpx;
    height: 100%;
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
  }
  
  .option-content {
    background: #fff;
    width: 550rpx;
    height: 100%;
    line-height: 100rpx;
    border-top-right-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
  }
  