<!-- pages/question-page/question-page.wxml -->
<view class="content">
  <view class="question">
    <text>{{stem}}</text>
  </view>
  <view class="options">
    <view class="option-item" bindtap="checked" wx:for-items="{{options}}" wx:for-item="item">
      <view class="option {{index==nameId?'option-checked':''}}" id="{{index}}">{{index==0 ? 'A ':(index==1?'B':(index==2?'C':'D'))}}</view>
      <view class="option-content {{index==nameId?'option-content-checked':''}}" id="{{index}}">{{item}}</view>
    </view>
