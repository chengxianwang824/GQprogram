      <view class="option {{index==nameId?'option-checked':''}}" data-id="{{index}}">B</view>
      <view class="option-content {{index==nameId?'option-content-checked':''}}" data-id="{{index}}">{{options[1]}}</view>
    </view>
    <view class="option-item">
      <view class="option {{index==nameId?'option-checked':''}}" data-id="{{index}}">C</view>
      <view class="option-content {{index==nameId?'option-content-checked':''}}" data-id="{{index}}">{{options[2]}}</view>
    </view>
    <view class="option-item">
      <view class="option {{index==nameId?'option-checked':''}}" data-id="{{index}}">D</view>
      <view class="option-content {{index==nameId?'option-content-checked':''}}" data-id="{{index}}">{{options[3]}}</view>
    </view> -->
  </view>
  <!-- <view class="pic-option">
    <view class="pic-item">
      <image></image>
      <button>A</button>
    </view>
  </view> -->
  <view class="next-btn">
    <button class="btn" bindtap="next">下一题</button>
  </view>
  <image src="/assets/image/ico_hdzq.png" class="correct-ico" wx:if="{{isCorrect}}"></image>

</view>
<view class="error-view" wx:if="{{isWrong}}">
  <view class="error-content">
    <view class="analysis">
      <text>回答错误</text>
      <text>我的答案：<text class="my-answer"></text></text>
      <text>正确答案：<text></text></text>
      <view class="look">
        <button>查看解析</button>
      </view>

    </view>
    <view class="next-btn">
      <button class="btn" bindtap="next">下一题</button>
    </view>
  </view>

</view>